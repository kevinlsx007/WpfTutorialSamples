<Window x:Class="WpfTutorialSamples.Basic_controls.ButtonSample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTutorialSamples.Basic_controls"
        mc:Ignorable="d"
        Title="ButtonSample" Height="300" Width="400">
    
    <Window.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Padding" Value="5,2"/>
        </Style>
    </Window.Resources>

    <StackPanel Margin="10">
        <Button Click="HelloWorldButton_Click">Hello, World!</Button>
        <Button Background="Beige" Foreground="Blue" FontWeight="Bold">Formatted Button</Button>
        <Button>
            <StackPanel Orientation="Horizontal">
                <!-- Pack URIs in WPF -->
                <Image Source="/WpfTutorialSamples;component/Images/help.png" Width="16" />
                <TextBlock Margin="5,0">Help</TextBlock>
            </StackPanel>
        </Button>
    </StackPanel>
</Window>
