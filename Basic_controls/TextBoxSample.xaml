<Window x:Class="WpfTutorialSamples.Basic_controls.TextBoxSample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTutorialSamples.Basic_controls"
        mc:Ignorable="d"
        Title="TextBoxSample" Height="320" Width="250">
    <StackPanel Margin="10">
        <!-- Default single-line text box -->
        <TextBox Text="Hello, world!" Margin="10"/>
        <!-- Multi-line text box -->
        <TextBox AcceptsReturn="True" TextWrapping="Wrap" Margin="10"/>
        <!-- Multi-line text box with spell check in English -->
        <TextBox AcceptsReturn="True" TextWrapping="Wrap" Margin="10" SpellCheck.IsEnabled="True" Language="en-US" />
    </StackPanel>
</Window>
